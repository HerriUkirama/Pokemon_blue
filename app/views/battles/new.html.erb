<div class="container mx-auto mt-24 w-full px-2 sm:px-4 py-4 space-y-5">
    <h1 class="text-5xl font-bold py-12">Battles</h1>

    <% if @battle.errors.any? %>
        <div id="error_explanation" class ="field_with_errors bg-red-200 w-full rounded-lg p-5">
            <h2 class= "text-3xl font-semibold"><%= pluralize(@battle.errors.count, "Error") %> prohibited this Battle From being created:</h2>

            <ul class="ml-8">
            <% @battle.errors.each do |error| %>
                <li class="list-disc"><%= error.message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div>
        <%= render 'form', battle: @battle, pokemons: @pokemons %>
    </div>
</div>