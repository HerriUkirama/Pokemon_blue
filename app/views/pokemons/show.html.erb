<div class="container">
    <h1 class="page-title">Pokemon Details</h1>
    <div class="flex pokemon-detail content-space">
        <div class="pokemon-image pokemon-detail-items">
            <div class="flex mb-5">
                <p class="width-fit pokemon-hp-label">hp: 
                </p>
                <p class="pokemon-hp">
                    <%= @pokemon.pokemon_hp%> / <%= @pokemon.pokemon_max_hp%>
                </p>
            </div>
            <div>
                <%= image_tag @pokedex.image %>
            </div>
            <div class="flex justify-space-between">
                <div class="flex">
                    <h2 class="mr-5">Level : </h2>
                    <h2><%= @pokemon.level%></h2>
                </div>
                <div class="text-right">
                    <h2><%= @pokedex.element_1%></h2>
                </div>
            </div>
            <div class="flex mb-5">
                <p class="width-fit pokemon-exp-label">exp: 
                </p>    
                <p class="pokemon-exp">
                    <%= @pokemon.pokemon_exp%> / <%= @pokemon.pokemon_max_exp%>
                </p>
            </div>
        </div>
        <div class="pokemon-detail-items">
            <div class="flex justify-space-between">
                <h1><%= @pokemon.name%></h1>
                <h2><%= @pokemon.status%></h2>
            </div>
            <h2><%= @pokedex.name%></h2>
            <% if @pokedex.element_2 !=nil %>
                <p><%= @pokedex.element_1%></p>
            <% end %>
            <h2>Stats</h2>
            <div class="stats">
                <div class="flex justify-space-between">
                    <p>Attack</p>
                    <p><%= @pokemon.pokemon_attack%></p>
                </div>
                <div class="flex justify-space-between">
                    <p>Defence</p>
                    <p><%= @pokemon.pokemon_defence%></p>
                </div>
                <div class="flex justify-space-between">
                    <p>Speed</p>
                    <p><%= @pokemon.pokemon_speed%></p>
                </div>
                <div class="flex justify-space-between">
                    <p>Special</p>
                    <p><%= @pokemon.pokemon_special%></p>
                </div>
            </div>
        </div>
    </div>
    <div class="content-space">
        <h2>Skill</h2>
        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>Skill Name</th>
                    <th>PP</th>
                    <th>Power</th>
                </tr>
            </thead>
            <tbody>
                <% @pokemon_skills.each_with_index do |pokemon_skill, index| %>
                    <tr>
                        <td><%= index+1 %></td>
                        <td><%= pokemon_skill.skill.name %></td>
                        <td><%= pokemon_skill.last_pp%> / <%= pokemon_skill.skill.pp %></td>
                        <td><%= pokemon_skill.skill.power %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <div class="flex">
        <% if @pokemon.status !="In Battle" %>
            <button><%= link_to 'Heal', heal_pokemon_path(@pokemon),
                data: { turbo_method: :post, turbo_confirm: "Are u sure about that?"}
            %></button>
        <% end %>
    </div>
</div>